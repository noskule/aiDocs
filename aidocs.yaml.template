# aiDocs Code Index Configuration
# Copy this file to aidocs.yaml and customize for your project.
#
# Usage: python docs/tools/code-index/generate.py --config aidocs.yaml

language: kotlin

modules:
  - name: app
    source_dirs:
      - app/src/main/java
    prefix: com.example.myapp

  # Add more modules as needed:
  # - name: wear
  #   source_dirs:
  #     - wear/src/main/java
  #   prefix: com.example.myapp.wear

output_dir: docs/code-index
merge_threshold: 2
